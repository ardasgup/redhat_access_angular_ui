div.input-group
  input#rha-searchform-searchbox.form-control(
    ng-disabled='!securityService.loginStatus.isLoggedIn',
    placeholder='{{placeholder}}',
    ng-model='SearchBoxService.searchTerm',
    ng-keypress='onFilterKeyPress($event)',
    ng-change='SearchBoxService.onChange()')
  span.input-group-btn
    button#rha-searchform-searchbutton.btn.btn-default.btn-primary(
      ng-click='SearchBoxService.doSOLRSearch()', 
      ng-disabled='!securityService.loginStatus.isLoggedIn')
      i.glyphicon.glyphicon-search
      |  {{'Search'|translate}}
